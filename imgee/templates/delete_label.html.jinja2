{% extends "layout.html.jinja2" %}
{% from 'baseframe/forms.html.jinja2' import renderform %}
{% from "baseframe/components.html.jinja2" import faicon %}

{% block basecontent %}
  {% block sidebar %}
  {% endblock %}
  {% block maincontent %}
  {% endblock %}
  <div class="alert alert--error">
    <p class="mui--text-title">{{ faicon(icon='trash-alt', icon_size='subhead', baseline=true) }} Confirm delete</p>
    <hr/>
    <p class="mui--text-subhead">{% trans label=label.title %}Are you sure you want to delete the label "{{ label }}{% endtrans %}"?<br/></p>
    <p>{{ faicon(icon='info-circle', baseline=true) }}&nbsp;<strong>{% trans %}Info: Even if you delete it, the files associated with the label will NOT be deleted.{% endtrans %}</strong></p>
    {% set cancel_url=url_for('show_label', profile=profile.name, label=label.name) %}
    <div class="form-submit">{{ renderform(form, "delete", "Yes, delete it", cancel_url=cancel_url)}}</div>
  </div>
{% endblock %}
